    //
    // Config necessária para funcionamento do xdebug3 no VSCODE
    // No OSX, necessário tb ajustar a diretiva 'XDEBUG_CONFIG: client_host' no docker-compose.yml para: host.docker.internal

    "version": "0.2.0",
    "configurations": [{
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                    "/app": "${workspaceFolder}"
                }
        }, {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003
        }
    ]
}