{# @var processo \SuppCore\AdministrativoBackend\Api\V1\DTO\Processo #}
{# @var usuario \SuppCore\AdministrativoBackend\Entity\Usuario #}
{# @var vinculados array #}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8"/>
    <title>PROTOCOLO EXTERNO - PACIFICA - SALÁRIO MATERNIDADE RURAL</title>

    <style>
        body {
            width: 100%;
            font-family: "Calibri", sans-serif;
            font-size: 12px;
            margin-top: 5%;
            margin-right: auto;
            margin-left: auto;
            max-width: 80%;
            line-height: 140%;
            -webkit-print-color-adjust: exact !important;
        }

        p {
            margin-top: 1em;
            margin-bottom: 1em;
            line-height: 1.1em;
        }

        .titulo {
            text-align: center;
            max-width: 100%;
            font-weight: bold;

        }

        .subtitulo {
            text-align: left;
            max-width: 100%;
            font-weight: bold !important;
            border-width: 1px 1px 1px 1px !important;
            background-color: #e5e5e5 !important;
            padding: 3px !important;
            margin-top: 1lh;
            margin-bottom: 1lh;
        }

        p.texto {
            text-indent: 50px;
            text-align: justify;
            margin-top: 0 !important;
            margin-bottom: 0 !important;
        }

        .cabecalho {
            text-align: center;
            font-weight: bold;
        }

        ul {
            margin: 0;
            padding: 0 15px;
            list-style-type: none;
        }

        li {
            list-style-position: inside;
        }

        ul.lowerAlpha li {
            list-style-type: lower-alpha;
        }
    </style>
</head>
<body>
<div class="cabecalho">
    {{ formatCabecalho(processo.setorAtual, true)|raw }}<br/>
</div>

<div class="titulo">
    PACIFICA<br/>
    FORMULÁRIO<br/>
    SALÁRIO – MATERNIDADE (SEGURADA ESPECIAL)
</div>
<br/>

<p><b>NUP:</b> {{ processo.nup | formatNup }}</p>
<p><b>SETOR:</b> {{ processo.setorAtual.nome }} / {{ processo.setorAtual.unidade.sigla }}</p>
<br>

<div class="subtitulo">
    I – INFORMAÇÕES DO REQUERIMENTO
</div>

<div>
    1. CPF da criança: {{ cpfCrianca|formatCpfCnpj }}<br/>
    2. CPF do beneficiário: {{ cpfBeneficiario|formatCpfCnpj }}<br/>
    3. Número do benefício: {{ numeroBeneficioNegado|formatNb }}<br/>
    4. Data do requerimento administrativo: {% if dataRequerimentoAdministrativo %} {{ dataRequerimentoAdministrativo|date("d/m/Y") }} {% endif %}<br/>
    5. Nome do cônjuge: {{ nomeConjuge|default('Não informado') }}<br/>
    6. CPF do cônjuge: {{ cpfConjuge|default('Não informado') }}<br/>
</div>
<br/>
{{ getConfigModulo('supp_core.administrativo_backend.solicitacao_automatizada.salario_maternidade_rural', 'termos_documento.requerimento')|raw }}
<br />
</body>
</html>
